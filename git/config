[user]
    name = David Millman
    email = dave@cs.unc.edu
[push]
    default = upstream
[core]
    editor = nvim
    # use delta as the pager in side by side mode if the
    # screen is wide enough else, use the standard mode
    pager = [ "${COLUMNS}" -ge 120 ] && delta --side-by-side || delta
[alias]
    ap = add -p
    aa = add --all
    br = branch
    brd = "!git branch -d $(git branch --no-color | grep -v -E ' (main|master)$' | fzf)"
    ci = commit -v
    co = checkout
    cob="!git checkout $(git branch --no-color | fzf)"
    hist ="log --pretty=format:\"%C(auto)%C(yellow)%h %C(green)%ar %C(blue)%an %C(red)%d%n  %C(reset)%s%n \" --graph"
    log-local = "log --oneline --graph --decorate --branches"
    alias = "!git config -l | grep "^alias" | cut -c 7-"
    patch = "!git --no-pager diff --no-color"
    publish = "!git push -u origin $(git rev-parse --abbrev-ref HEAD)"
    st = status

[merge]
    conflictStyle = zdiff3
[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    line-numbers = true
[hub]
	protocol = ssh
[init]
	defaultBranch = main
[credential]
	helper = store
[url "git@github.com:"]
	insteadOf = https://github.com
