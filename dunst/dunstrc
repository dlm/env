[global]
  # Font for notifications
  font = "JetBrains Mono 10"

  # Notification position and size
  width = 350
  height = 100
  origin = top-right
  offset = 15x15

  # Number of notifications to show at once
  notification_limit = 5

  # Enable progress bar
  progress_bar = true
  progress_bar_height = 4
  progress_bar_frame_width = 1
  progress_bar_min_width = 150
  progress_bar_max_width = 350

  # Show how many messages are currently hidden
  indicate_hidden = yes

  # Notification transparency (0-100)
  transparency = 10

  # Show notification age if older than show_age_threshold seconds
  show_age_threshold = 60

  # Use ellipsize to truncate long lines
  ellipsize = middle

  # Ignore newlines in notifications
  ignore_newline = no

  # Stack duplicate notifications
  stack_duplicates = true

  # Hide duplicates count
  hide_duplicate_count = false

  # Enable markup parsing
  markup = full

  # Notification format
  format = "<b>%s</b>\n%b"

  # Alignment (left/center/right)
  alignment = left

  # Vertical alignment (top/center/bottom)
  vertical_alignment = center

  # Show indicators for URLs and actions
  show_indicators = yes

  # Padding between elements
  padding = 12
  horizontal_padding = 12
  text_icon_padding = 12

  # Icon settings
  icon_position = left
  min_icon_size = 24
  max_icon_size = 48

  # Corners
  corner_radius = 8

  # Borders
  frame_width = 2
  frame_color = "#89b4fa"

  # Gap between notifications
  gap_size = 5

  # Mouse interaction
  mouse_left_click = close_current
  mouse_middle_click = do_action, close_current
  mouse_right_click = close_all

[urgency_low]
  background = "#1e1e2e"
  foreground = "#cdd6f4"
  highlight = "#89b4fa"
  timeout = 5

[urgency_normal]
  background = "#1e1e2e"
  foreground = "#cdd6f4"
  highlight = "#89b4fa"
  timeout = 8

[urgency_critical]
  background = "#1e1e2e"
  foreground = "#f38ba8"
  highlight = "#f38ba8"
  timeout = 0
  frame_color = "#f38ba8"
