# i3 config file (v4)

set $mod Mod4
# set $mod Mod1
set $i3 ~/.config/i3

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# auto-float terminal setup
set $auto_float_terminal_title auto-float-terminal
for_window [title=$auto_float_terminal_title] floating enable

# apps
mode "app_launch" {
    bindsym Return exec $i3/bin/i3-mode launch-leave terminal
    bindsym space exec $i3/bin/i3-mode launch-leave app-launcher
    bindsym b exec $i3/bin/i3-mode launch-leave browser
    bindsym a exec $i3/bin/i3-mode launch-leave webapp https://chatgpt.com/
    bindsym x exec $i3/bin/i3-mode launch-leave clipboard
    bindsym d exec $i3/bin/i3-mode launch-leave terminal --title "$auto_float_terminal_title" yazi
    bindsym p exec $i3/bin/i3-mode launch-leave screenshot

    # back to normal: Escape
    bindsym Escape exec $i3/bin/i3-mode exit
}

bindsym $mod+p exec $i3/bin/i3-mode enter "app_launch" "b=browser\na=ai\nx=clipboard\nd=terminal\np=screenshot"

bindsym $mod+Return split h; exec $i3/bin/i3-launch terminal
bindsym $mod+Shift+Return split v; exec $i3/bin/i3-launch terminal
bindsym $mod+Ctrl+Return exec $i3/bin/i3-launch terminal --title "$auto_float_terminal_title"
bindsym $mod+space exec $i3/bin/i3-launch app-launcher
bindsym Print --release exec $i3/bin/launch screenshot

# setup ghostty scrollback floatting window
bindsym $mod+Shift+y exec ~/bin/scripts/ghostty-scrollback-float '$auto_float_terminal_title'

# kill focused window
bindsym $mod+Shift+C kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+apostrophe scratchpad show
bindsym $mod+m focus parent
bindsym $mod+comma focus child
bindsym $mod+n exec $i3/bin/focus-workspace
# I will add the following to move to the next view in a project
#bindsym $mod+i exec muxwm project focus next
#bindsym $mod+u exec muxwm project focus prev

# ... to and from fullscreen mode
# one could aruue that this should be a shift command since it is moving
# the current container to and from full screen mode.  I will need to think
# about this more. But at least for now, it seems like a very nice use of
# the semicolon key combo.
bindsym $mod+semicolon fullscreen

# change focus between tiling and floating
# I am not sure if o is a good option.
# it was $mod+space in the original config
# but that is a pretty nice key combo.  Since I almost never use floating
# windows, that is a huge waste of a very easy key combo
# if I do change it, make sure to update the $mod+Shift+o
# which toggle the current container to floating
bindsym $mod+o focus mode_toggle

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+apostrophe move scratchpad
bindsym $mod+Shift+n exec $i3/bin/move-to-workspace

# ... to and from floating mode
bindsym $mod+Shift+o floating toggle

# move workspaces to left/right monitor
bindsym $mod+Left move workspace to output left
bindsym $mod+Right move workspace to output right
bindsym $mod+Ctrl+Left exec $i3/bin/move-workspaces-left
bindsym $mod+Ctrl+Right exec $i3/bin/move-workspaces-right


# change container layout (stacked, tabbed, default)
mode "layout" {
    bindsym d exec $i3/bin/i3-mode msg-leave "layout default"
    bindsym h exec $i3/bin/i3-mode msg-leave "layout splith"
    bindsym s exec $i3/bin/i3-mode msg-leave "layout stacking"
    bindsym t exec $i3/bin/i3-mode msg-leave "layout tabbed"
    bindsym v exec $i3/bin/i3-mode msg-leave "layout splitv"
    bindsym Tab layout toggle splith tabbed stacked splitv

    # back to normal: Enter or Escape
    bindsym Escape exec $i3/bin/i3-mode exit
}

bindsym $mod+e exec $i3/bin/i3-mode enter "layout" "d=default\nh=splith\ns=stacking\nt=tabbed\nv=splitv\nTab=toggle layout"
# Note that I have had these in my config for a very long time
# but I very rarely use them.  I think it would be worth freeing up these
# keys in the base because I can do this in a layer, should I want to.
# split in horizontal orientation
# bindsym $mod+n split h
# split in vertical orientation
# bindsym $mod+v split v



bindsym XF86AudioMute exec $i3/bin/toggle-volume
bindsym XF86AudioLowerVolume exec $i3/bin/update-volume -10
bindsym XF86AudioRaiseVolume exec $i3/bin/update-volume +10

bindsym XF86MonBrightnessDown exec $i3/bin/update-screen-brightness -0.1
bindsym XF86MonBrightnessUp exec $i3/bin/update-screen-brightness 0.1

# set workspace names
set $ws1 "1.admin"
set $ws2 2
set $ws3 "3.ai"
set $ws4 "4.dev"
set $ws5 5
set $ws6 6
set $ws7 "7.ref"
set $ws8 "8.msg"
set $ws9 "9.todo"
set $ws10 "10.share"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+a exec muxwm pin focus a
bindsym $mod+s exec muxwm pin focus s
bindsym $mod+d exec muxwm pin focus d
bindsym $mod+f exec muxwm pin focus f
bindsym $mod+g exec muxwm pin focus g
bindsym $mod+grave exec muxwm pin focus '`'

# todo: add a script that gives all the workspaces in rofi
# so that we can select it even if it is not pinned

# move focused container to workspace and keep focus
bindsym $mod+Shift+1 move workspace $ws1, workspace $ws1
bindsym $mod+Shift+2 move workspace $ws2, workspace $ws2
bindsym $mod+Shift+3 move workspace $ws3, workspace $ws3
bindsym $mod+Shift+4 move workspace $ws4, workspace $ws4
bindsym $mod+Shift+5 move workspace $ws5, workspace $ws5
bindsym $mod+Shift+6 move workspace $ws6, workspace $ws6
bindsym $mod+Shift+7 move workspace $ws7, workspace $ws7
bindsym $mod+Shift+8 move workspace $ws8, workspace $ws8
bindsym $mod+Shift+9 move workspace $ws9, workspace $ws9
bindsym $mod+Shift+0 move workspace $ws10, workspace $ws10

# reload the configuration file
bindsym $mod+r reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+R restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+Escape exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"



# $mod+F12 locks the screen and
# $mod+Shift+F12 suspends the screen.
# Note that pn-suspend needs to be run as root.
# To have this run without needing a password I ran:
# > sudo visudo
# and added the line
# dave ALL=NOPASSWD:/usr/sbin/pm-suspen
bind $mod+96 exec $i3/bin/lock
bind $mod+Shift+96 exec sudo /usr/sbin/pm-suspend


# resize window (you can also use the mouse for that)
mode "resize" {
    # grow
    bindsym h resize grow left 5 px or 5 ppt
    bindsym j resize grow down 5 px or 5 ppt
    bindsym k resize grow up 5 px or 5 ppt
    bindsym l resize grow right 5 px or 5 ppt

    # shrink
    bindsym Shift+h resize shrink left 5 px or 5 ppt
    bindsym Shift+j resize shrink down 5 px or 5 ppt
    bindsym Shift+k resize shrink up 5 px or 5 ppt
    bindsym Shift+l resize shrink right 5 px or 5 ppt

    # back to normal
    bindsym Escape exec $i3/bin/i3-mode exit
}

bindsym $mod+q exec $i3/bin/i3-mode enter resize "hjkl=grow\nHJKL=shrink"

