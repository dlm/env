#!/usr/bin/env bash

function process_git() {
    git -C "./$1" status --branch --porcelain=v1
}

function process_mercurial() {
    hg -R "./$1" status
}

function main() {
    for repo in $(ls); do
        echo --$repo--
        if [[ -e $repo/.git ]]; then
            process_git $repo
            echo
        elif [[ -e $repo/.hg ]]; then
            process_mercurial $repo
       else
            echo "unknown repo type"
        fi
    done
}

main
